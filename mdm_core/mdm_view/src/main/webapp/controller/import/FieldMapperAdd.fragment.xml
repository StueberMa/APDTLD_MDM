<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<P13nDialog ok="handleCloseOk" cancel="handleCloseCancel">
		<f:Form id="FormMappingDetails" minWidth="1024"
			maxContainerCols="2" editable="true">
			<f:layout>
				<f:ResponsiveGridLayout labelSpanL="2"
					labelSpanM="2" emptySpanL="1" emptySpanM="1" columnsL="1" columnsM="1" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="File Attributes">
					<f:formElements>
						<f:FormElement label="Name">
							<f:fields>
								<ComboBox id="popoverFileName" items="{/attributes_file/}" selectionChange="onPopoverFileNameChange">
									<core:Item key="{name}" text="{name}" />
								</ComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Type">
							<f:fields>
								<Select id="popoverFileType" selectedKey="str">
									<core:Item key="Number" text="Number" />
									<core:Item key="Text" text="Text" />
									<core:Item key="Date" text="Date" />
								</Select>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Sample">
							<f:fields>
								<Text id="popoverFileSample" text="lalala" />
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
			<f:formContainers>
				<f:FormContainer title="Database Attributes">
					<f:formElements>
						<f:FormElement label="Name">
							<f:fields>
								<ComboBox id="popoverDbName" items="{/attributes_database/}" selectionChange="onPopoverDBNameChange">
									<core:Item key="{name}" text="{name}" />
								</ComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Type">
							<f:fields>
								<Text id="popoverDbType" text="type" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Sample">
							<f:fields>
								<Text id="popoverDbSample" text="lalala" />
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</P13nDialog>
</core:FragmentDefinition>
<mvc:View height="100%" controllerName="uni.mannheim.mdm.controller.masterdata.Overview"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">

	<Page title="SolveIT" class="sapUiContentPadding" showNavButton="true" navButtonPress="onBack">
		<!-- Header -->
		<customHeader>
			<Bar>
				<contentLeft>
					<Button type="Back" press="onBack" />
					<Text class="mdmPageTitle" text="solveIT" />
					<Text class="mdmPageSlogan" text="The customer in mind" />
				</contentLeft>
				<contentRight>
					<Text class="mdmWelcome" text="Welcome: " />
					<Link text="Max Mustermann" />
					<Button icon="sap-icon://log" tooltip="Logout" />
				</contentRight>
			</Bar>
		</customHeader>

		<!-- Content -->
		<content>
			<TileContainer id="overviewCont">
				<StandardTile icon="sap-icon://customer"
					title="Customer" press="onCustomerOverview" type="Create" />
				<StandardTile icon="sap-icon://product"
					title="Product" type="Monitor" />
				<StandardTile icon="sap-icon://supplier"
					title="Supplier" type="Monitor" />	
			</TileContainer>
		</content>

		<!-- Footer -->
		<footer>
			<Bar>
				<contentLeft>
					<mvc:XMLView viewName="uni.mannheim.mdm.view.Menu"></mvc:XMLView>
				</contentLeft>
				<contentRight>
					<Text class="mdmCopyright" text="Â© solveIT 2015" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>
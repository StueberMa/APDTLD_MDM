<mvc:View height="100%"
	controllerName="uni.mannheim.mdm.controller.masterdata.ProductOverview"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">
	
	<VBox class="mdmScreenTitle">
		<Text class="mdmTitle" text="Product Overview" />
	</VBox>
	
	<VBox class="mdmScreenContent">
		<Table id="productTable"
			items="{path: '/Products', sorter: {
				path: 'Name'
			}}">
			<headerToolbar>
				<Toolbar>
					<ToolbarSpacer></ToolbarSpacer>
					<SearchField width="25%" placeholder="Search for Name ..." search="onSearch" />
					<Button icon="sap-icon://refresh" press="onRefresh" />
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="Name" />
				</Column>
				<Column>
					<Text text="Size" />
				</Column>
				<Column>
					<Text text="Color" />
				</Column>
				<Column>
					<Text text="Price" />
				</Column>
				<Column>
					<Text text="Currency" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text class="mdmBoldTxt" text="{Name}" />
						<Text text="{Size}" />
						<Text text="{Color}" />
						<Text text="{Price}" />
						<Text text="{Currency}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<VBox class="mdmNewEntityContainer">
			<Text text="Product not found?" />
			<Button text="Create" icon="sap-icon://create" press="onNewProduct" />
		</VBox>
	</VBox>
</mvc:View>
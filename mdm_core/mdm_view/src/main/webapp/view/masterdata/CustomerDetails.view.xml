<core:View xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="uni.mannheim.mdm.controller.masterdata.CustomerDetails"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<ScrollContainer height="100%" width="100%" horizontal="true"
		vertical="true" focusable="false">
		<Toolbar>
			<Button icon="sap-icon://save" text="Save" press="onSave" />
			<ToolbarSpacer />
			<ToolbarSpacer />
			<Button icon="sap-icon://sys-cancel" text="Cancel" press="onCancel" />
		</Toolbar>
		<f:Form id="FormCustomerDetails" minWidth="1024"
			maxContainerCols="2" editable="true">
			<f:title>
				<core:Title text="Customer Details" />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout labelSpanL="2"
					labelSpanM="2" emptySpanL="1" emptySpanM="1" columnsL="1" columnsM="1" />
			</f:layout>
			<f:formContainers>

				<!-- General user details -->
				<f:FormContainer title="General data">
					<f:formElements>
						<f:FormElement label="Title">
							<f:fields>
								<Select id="titleFieldId" selectedKey="{Title}" width="30%">
									<items>
										<core:Item text="Mr." key="Mr." />
										<core:Item text="Mrs." key="Mrs." />
									</items>
									<layoutData></layoutData>
								</Select>
							</f:fields>
						</f:FormElement>
					</f:formElements>
					<f:formElements>
						<f:FormElement label="Name">
							<f:fields>
								<Input id="firstNameFieldId" value="{FirstName}"
									placeholder="First name">
									<layoutData></layoutData>
								</Input>
								<Input id="lastNameFieldId" value="{LastName}"
									placeholder="Last name">
									<layoutData></layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
					</f:formElements>
					<f:formElements>
						<f:FormElement label="Date of Birth">
							<f:fields>
								<DatePicker id="birthDateFieldId" value="{path:'BirthDate'}"
									placeholder="Birth date" width="30%">
									<!-- var dateFormat = sap.ui.core.format.DateFormat.getDateTimeInstance({pattern 
										: "yyyy-MM-ddTKK:mm:ss" }); sap.ui.model.odata.type.DateTime() sap.ui.model.type.Date({ 
										oFormatOptions:{ style: "short", UTC: true} }) {path:'{customerModel>BirthDate}', 
										type:'sap.ui.model.odata.type.DateTime', constraints: {displayFormat: 'Date'}}" -->
									<layoutData>
									</layoutData>
								</DatePicker>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Gender">
							<f:fields>
								<RadioButtonGroup id="genderFieldId" columns="2">
									<!-- selectedIndex="{customerModel>Gender}" -->
									<buttons>
										<RadioButton text="Male" />
										<RadioButton text="Female" />
									</buttons>
								</RadioButtonGroup>
							</f:fields>
						</f:FormElement>
					</f:formElements>
					<f:layoutData>
						<f:GridContainerData />
					</f:layoutData>
				</f:FormContainer>

				<!-- Address details form -->
				<f:FormContainer title="Address details">
					<f:formElements>
						<f:FormElement label="Street / Number">
							<f:fields>
								<Input id="addressStreetFieldId" value="{Address/Street}"
									placeholder="Street">
									<layoutData></layoutData>
								</Input>
								<Input id="addressHouseNoFieldId" value="{Address/HouseNo}"
									placeholder="No" width="20%">
									<layoutData></layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="City / Zip Code">
							<f:fields>
								<Input id="addressCityFieldId" value="{Address/City}"
									placeholder="City">
									<layoutData></layoutData>
								</Input>
								<Input id="addressZipCodeFieldId" value="{Address/ZipCode}"
									placeholder="Zip code" width="40%">
									<layoutData></layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Country">
							<f:fields>
								<Input id="addressCountryFieldId" value="{Address/Country}"
									placeholder="Country">
									<layoutData></layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>

				<!-- contact details form -->
				<f:FormContainer title="Contact Details">
					<f:formElements>
						<f:FormElement label="E-Mail Address">
							<f:fields>
								<Input id="contactDetailsEmailFieldId" type="Email"
									value="{ContactDetails/Email}" placeholder="E-Mail address">
									<layoutData></layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Phone">
							<f:fields>
								<Input id="contactDetailsPhoneFieldId" type="Tel"
									value="{ContactDetails/Phone}" placeholder="Phone number">
									<layoutData></layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Mobile">
							<f:fields>
								<Input id="contactDetailsMobileFieldId" type="Tel"
									value="{ContactDetails/Mobile}" placeholder="Mobile number">
									<layoutData></layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</ScrollContainer>
</core:View>
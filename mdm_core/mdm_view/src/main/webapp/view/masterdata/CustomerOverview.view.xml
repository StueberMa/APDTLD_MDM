<mvc:View height="100%"
	controllerName="uni.mannheim.mdm.controller.masterdata.CustomerOverview"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable" xmlns:sl="sap.ui.comp.navpopover">

	<VBox>
		<smartFilterBar:SmartFilterBar id="customerSmartFilterBar"
			entityType="Customer" persistencyKey="CustomerSmartFilter">
			<smartFilterBar:controlConfiguration>
				<smartFilterBar:ControlConfiguration
					key="FirstName" />
				<smartFilterBar:ControlConfiguration
					key="LastName" />
			</smartFilterBar:controlConfiguration>
		</smartFilterBar:SmartFilterBar>
		<smartTable:SmartTable class="mdmSmartTable"
			entitySet="Customers" tableType="ResponsiveTable" useExportToExcel="true"
			useVariantManagement="false" useTablePersonalisation="true" header="Customer"
			showRowCount="true" persistencyKey="CustomerSmartTable"
			enableAutoBinding="true" smartFilterId="customerSmartFilterBar">
			<smartTable:semanticObjectController>
				<sl:SemanticObjectController
					navigationTargetsObtained="onNavTargetsObtained" navigate="onNavigate" />
			</smartTable:semanticObjectController>
		</smartTable:SmartTable>
		<VBox class="mdmNewEntity">
			<Text text="Customer not found?" />
			<Button text="Create" icon="sap-icon://create" press="onNewCustomer" />
		</VBox>
	</VBox>
</mvc:View>
<mvc:View height="100%"
	controllerName="uni.mannheim.mdm.controller.marketing.LeadOverview"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout">
	
	<VBox class="mdmScreenTitle">
		<Text class="mdmTitle" text="Lead Overview" />
	</VBox>
	
	<fb:FilterBar search="onSearch" class="mdmFilterBar"
		showRestoreButton="true" showClearButton="true" advancedMode="true">
		<fb:filterItems>
			<fb:FilterItem name="FirstName" label="First Name">
				<fb:control>
					<Input type="Text" placeholder="First Name" value="{filter>/FirstName}"/>
				</fb:control>
			</fb:FilterItem>
			<fb:FilterItem name="LastName" label="Last Name">
				<fb:control>
					<Input type="Text" placeholder="Last Name" value="{filter>/LastName}"/>
				</fb:control>
			</fb:FilterItem>
			<fb:FilterItem name="ProductName" label="Product">
				<fb:control>
					<Input type="Text" placeholder="Product" value="{filter>/Product}"/>
				</fb:control>
			</fb:FilterItem>
			<fb:FilterItem name="Status" label="Status">
				<fb:control>
					<Select width="50%" selectedKey="{filter>/Status}">
						<items>
							<core:Item text="" key="" />
							<core:Item text="Open" key="OPEN" />
							<core:Item text="Closed" key="CLOSE" />
						</items>
					</Select>
				</fb:control>
			</fb:FilterItem>
		</fb:filterItems>
	</fb:FilterBar>
	
	<ScrollContainer class="mdmScreenContent" height="100%" width="100%" horizontal="true"
		vertical="true" focusable="false">
		<Table id="leadTable"
			items="{path: '/Leads', parameters: {expand: 'CampaignDetails,CustomerDetails,ProductDetails'}, sorter: {
				path: 'Id', descending: false
			}}">
			<headerToolbar>
				<OverflowToolbar>
					<ToolbarSpacer></ToolbarSpacer>
					<Button  icon="sap-icon://refresh" press="onRefresh" />
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="Customer" />
				</Column>
				<Column>
					<Text text="Product" />
				</Column>
				<Column>
					<Text text="Contact on" />
				</Column>
				<Column>
					<Text text="Status" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text class="mdmBoldTxt" text="{CustomerDetails/FirstName} {CustomerDetails/LastName}" />
						<Text text="{ProductDetails/Name}" />
						<Text text="{path:'ContactOn', type:'sap.ui.model.type.Date',
									formatOptions: { style: 'medium', strictParsing: true}}" />
						<Text text="{Status}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<VBox class="mdmNewEntityContainer">
			<Text text="Lead not found?" />
			<Button text="Create" icon="sap-icon://create" press="onNewLead" />
		</VBox>
	</ScrollContainer>
</mvc:View>
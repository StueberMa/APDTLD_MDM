<mvc:View height="100%"
	controllerName="uni.mannheim.mdm.controller.marketing.LeadOverview"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">
	
	<VBox class="mdmScreenTitle">
		<Text class="mdmTitle" text="Lead Overview" />
	</VBox>
	
	<ScrollContainer class="mdmScreenContent" height="100%" width="100%" horizontal="true"
		vertical="true" focusable="false">
		<Table id="leadTable"
			items="{path: '/Leads', parameters: {expand: 'CustomerDetails,ProductDetails'}, sorter: {
				path: 'Id', descending: false
			}}">
			<headerToolbar>
				<OverflowToolbar>
					<ToolbarSpacer></ToolbarSpacer>
					<SearchField width="25%" placeholder="Search for Customer ..." search="onSearch" />
					<Button  icon="sap-icon://refresh" press="onRefresh" />
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="Customer" />
				</Column>
				<Column>
					<Text text="Product" />
				</Column>
				<Column>
					<Text text="Contact on" />
				</Column>
				<Column>
					<Text text="Status" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text class="mdmBoldTxt" text="{CustomerDetails/FirstName} {CustomerDetails/LastName}" />
						<Text text="{ProductDetails/Name}" />
						<Text text="{ContactOn}" />
						<Text text="{Status}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<VBox class="mdmNewEntityContainer">
			<Text text="Lead not found?" />
			<Button text="Create" icon="sap-icon://create" press="onNewLead" />
		</VBox>
	</ScrollContainer>
</mvc:View>
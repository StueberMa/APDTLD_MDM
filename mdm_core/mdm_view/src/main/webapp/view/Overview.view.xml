<mvc:View height="100%" controllerName="uni.mannheim.mdm.controller.Overview"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">

	<VBox class="mdmScreenTitle">
		<Text class="mdmTitle" text="Welcome to SolveIT" />
		<Text class="mdmSubTitle"
			text="Master Data Management Special Designed for Marketing" />
	</VBox>

	<TileContainer>
		<!-- Worklist -->
		<CustomTile class="mdmTile">
			<content>
				<VBox>
					<l:HorizontalLayout>
						<core:Icon class="mdmTileIcon" src="sap-icon://list" />
						<VBox class="mdmTileHeader">
							<Text class="mdmTileHeaderTitle" text="Worklist" />
							<Text class="mdmTileHeaderSub" text="Easily Manage Your Daily Work Across Functions" />
						</VBox>
					</l:HorizontalLayout>
					<Image src="./resources/img/coming_soon.png" class="mdmTileUnderDevImage"
						densityAware="false" />
				</VBox>
			</content>
		</CustomTile>

		<!-- Marketing -->
		<CustomTile class="mdmTile" press="onMarketingOverview">
			<content>
				<VBox>
					<l:HorizontalLayout>
						<core:Icon class="mdmTileIcon" src="sap-icon://marketing-campaign" />
						<VBox class="mdmTileHeader">
							<Text class="mdmTileHeaderTitle" text="Marketing" />
							<Text class="mdmTileHeaderSub" text="All Your Campaigns at a Glanze" />
						</VBox>
					</l:HorizontalLayout>
					<Image src="./resources/img/no_image.png" class="mdmTileImage"
						densityAware="false" />
				</VBox>
			</content>
		</CustomTile>

		<!-- Analysis -->
		<CustomTile class="mdmTile">
			<content>
				<VBox>
					<l:HorizontalLayout>
						<core:Icon class="mdmTileIcon" src="sap-icon://bar-chart" />
						<VBox class="mdmTileHeader">
							<Text class="mdmTileHeaderTitle" text="Analysis" />
							<Text class="mdmTileHeaderSub" text="Advanced Analysis with Rich Visualizations" />
						</VBox>
					</l:HorizontalLayout>
					<Image src="./resources/img/coming_soon.png" class="mdmTileUnderDevImage"
						densityAware="false" />
				</VBox>
			</content>
		</CustomTile>

		<!-- Master Data -->
		<CustomTile class="mdmTile">
			<VBox>
				<CustomTile press="onMasterDataOverview">
					<content>
						<l:HorizontalLayout>
							<core:Icon class="mdmTileIcon"
								src="sap-icon://customer-financial-fact-sheet" />
							<VBox class="mdmTileHeader">
								<Text class="mdmTileHeaderTitle" text="Master Data" />
								<Text class="mdmTileHeaderSub" text="Maintain and Search for Master Data" />
							</VBox>
						</l:HorizontalLayout>
					</content>
				</CustomTile>
				<VBox class="mdmTileQuickAction">
					<Text text="Quick Action:" />
					<html:ol>
						<html:li>
							<Link text="Customer Overview" press="onCustomerOverview" />
						</html:li>
						<html:li>
							<Link text="Product Overview" press="onProductOverview" />
						</html:li>
					</html:ol>
				</VBox>
			</VBox>
		</CustomTile>

		<!-- Data Import -->
		<CustomTile class="mdmTile">
			<VBox>
				<CustomTile press="onDataImportOverview">
					<l:HorizontalLayout>
						<core:Icon class="mdmTileIcon" src="sap-icon://database" />
						<VBox class="mdmTileHeader">
							<Text class="mdmTileHeaderTitle" text="Data Import" />
							<Text class="mdmTileHeaderSub"
								text="Monitor Data Integration and Easily Load New Data" />
						</VBox>
					</l:HorizontalLayout>
				</CustomTile>
				<VBox class="mdmTileQuickAction">
					<Text text="Quick Action:" />
					<html:ol>
						<html:li>
							<Link text="File Upload" press="onFileUpload" />
						</html:li>
					</html:ol>
				</VBox>
			</VBox>
		</CustomTile>

		<!-- Settings -->
		<CustomTile class="mdmTile">
			<content>
				<VBox>
					<l:HorizontalLayout>
						<core:Icon class="mdmTileIcon" src="sap-icon://settings" />
						<VBox class="mdmTileHeader">
							<Text class="mdmTileHeaderTitle" text="Settings" />
							<Text class="mdmTileHeaderSub" text="Change Your Preferences and Manage Authorities" />
						</VBox>
					</l:HorizontalLayout>
					<Image src="./resources/img/coming_soon.png" class="mdmTileUnderDevImage"
						densityAware="false" />
				</VBox>
			</content>
		</CustomTile>
	</TileContainer>
</mvc:View>
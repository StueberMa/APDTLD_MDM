<mvc:View height="100%" controllerName="uni.mannheim.mdm.controller.Overview"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">

	<Page title="SolveIT" class="sapUiContentPadding" showNavButton="false">
		<!-- Header -->
		<customHeader>
			<Bar>
				<contentLeft>
					<Text class="mdmPageTitle" text="solveIT" />
					<Text class="mdmPageSlogan" text="The customer in mind" />
				</contentLeft>
				<contentRight>
					<Text class="mdmWelcome" text="Welcome: " />
					<Link text="Max Mustermann" />
					<Button icon="sap-icon://log" tooltip="Logout" />
				</contentRight>
			</Bar>
		</customHeader>

		<!-- Content -->
		<content>
			<TileContainer id="overviewCont">
				<StandardTile icon="sap-icon://marketing-campaign"
					title="Marketing" info="All Your Campaigns at a Glanze" type="Monitor" />
				<StandardTile icon="sap-icon://bar-chart"
					title="Analysis" info="Advanced Analysis with Rich Visualizations" type="Monitor" />
				<StandardTile icon="sap-icon://customer-financial-fact-sheet"
					title="Master Data" press="onMasterDataOverview" info="Maintain and Search for Master Data" type="Create" />	
				<StandardTile icon="sap-icon://database"
					title="Data Import" press="onDataImportOverview" info="Monitor Data Integration and Easily Load New Data" type="Create" />	
			</TileContainer>
		</content>

		<!-- Footer -->
		<footer>
			<Bar>
				<contentLeft>
					<mvc:XMLView viewName="uni.mannheim.mdm.view.Menu"></mvc:XMLView>
				</contentLeft>
				<contentRight>
					<Text class="mdmCopyright" text="Â© solveIT 2015" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>
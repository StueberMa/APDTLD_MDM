<mvc:View controllerName="uni.mannheim.mdm.controller.App"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout">

	<App>
		<Page id="main" title="SolveIT" class="sapUiContentPadding">
			<!-- Header -->
			<customHeader>
				<Bar>
					<contentLeft>
						<l:HorizontalLayout>
							<Button id="navBack" type="Back" press="onBack" />
							<Text class="mdmPageTitle" text="solveIT" />
							<Text class="mdmPageSlogan" text="The customer in mind" />
						</l:HorizontalLayout>
					</contentLeft>
					<contentRight>
						<l:HorizontalLayout>
							<Text class="mdmWelcome" text="Welcome: " />
							<Link text="Max Mustermann" />
							<Button icon="sap-icon://log" tooltip="Logout" />
						</l:HorizontalLayout>
					</contentRight>
				</Bar>
			</customHeader>

			<!-- Content -->
			<content>
				<NavContainer id="navContainer" width="100%"
					class="navContainerControl" />
			</content>

			<!-- Footer -->
			<footer>
				<Bar>
					<contentLeft>
						<Button text="Overview" press="onOverview" ariaDescribedBy="Overview" />
						<Button text="Worklist" ariaDescribedBy="Worklist" />
						<Button text="Marketing" press="onMarketingOverview" ariaDescribedBy="Marketing" />
						<Button text="Analysis" ariaDescribedBy="Analysis" />
						<Button text="Master Data" press="onMasterDataOverview"
							ariaDescribedBy="Master Data" />
						<Button text="Data Import" press="onDataImportOverview"
							ariaDescribedBy="Data Import" />
						<Button text="Settings" ariaDescribedBy="Settings" />
					</contentLeft>
					<contentRight>
						<Text class="mdmCopyright" text="Â© solveIT 2015" />
					</contentRight>
				</Bar>
			</footer>
		</Page>
	</App>
</mvc:View>
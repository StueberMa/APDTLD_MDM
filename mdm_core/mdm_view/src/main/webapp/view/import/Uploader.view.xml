<mvc:View height="100%" controllerName="uni.mannheim.mdm.controller.import.Uploader"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:u="sap.ui.unified">

	<!-- Content -->

		<UploadCollection
			id="UploadCollection"
			uploadUrl="upload"
			maximumFilenameLength="55"
			maximumFileSize="10240"
			multiple="true"
			sameFilenameAllowed="true"
			instantUpload="false"
			showSeparators="All"
			change="onChange"
			fileDeleted="onFileDeleted"
			filenameLengthExceed="onFilenameLengthExceed"
			fileSizeExceed="onFileSizeExceed"
			typeMissmatch="onTypeMissmatch"
			uploadComplete="onUploadComplete"
			beforeUploadStarts="onBeforeUploadStarts">
		</UploadCollection>
		<Button
			id="UploadButton"
			text="Upload Now"
			enabled="false"
			press="onStartUpload">
		</Button>
		<ProgressIndicator
			id="UploadProgressIndicator"
			class="sapUiSmallMarginBottom" 
			visible="false"
			percentValue="0"
			displayValue="0%"
			showValue="true"
			state="None" />

</mvc:View>
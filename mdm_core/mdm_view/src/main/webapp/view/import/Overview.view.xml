<mvc:View height="100%" controllerName="uni.mannheim.mdm.controller.import.Overview"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">

	<Page title="SolveIT" class="sapUiContentPadding" showNavButton="true"
		navButtonPress="onBack">
		<!-- Header -->
		<customHeader>
			<Bar>
				<contentLeft>
					<Button type="Back" press="onBack" />
					<Text class="mdmPageTitle" text="solveIT" />
					<Text class="mdmPageSlogan" text="The customer in mind" />
				</contentLeft>
				<contentRight>
					<Text class="mdmWelcome" text="Welcome: " />
					<Link text="Max Mustermann" />
					<Button icon="sap-icon://log" tooltip="Logout" />
				</contentRight>
			</Bar>
		</customHeader>

		<!-- Content -->
		<content>
			<TileContainer>
				<!-- Monitor -->
				<CustomTile class="mdmTile">
					<content>
						<VBox>
							<l:HorizontalLayout>
								<core:Icon class="mdmTileIcon" src="sap-icon://sys-monitor" />
								<VBox class="mdmTileHeader">
									<Text class="mdmTileHeaderTitle" text="Monitor" />
									<Text class="mdmTileHeaderSub" text="Control the System Health and Data Quality" />
								</VBox>
							</l:HorizontalLayout>
							<Image src="./resources/img/coming_soon.png" class="mdmTileUnderDevImage"
								densityAware="false" />
						</VBox>
					</content>
				</CustomTile>
				
				<!-- Data Source -->
				<CustomTile class="mdmTile">
					<content>
						<VBox>
							<l:HorizontalLayout>
								<core:Icon class="mdmTileIcon" src="sap-icon://it-system" />
								<VBox class="mdmTileHeader">
									<Text class="mdmTileHeaderTitle" text="Data Source" />
									<Text class="mdmTileHeaderSub" text="Guided Data Import from Local Staging Area" />
								</VBox>
							</l:HorizontalLayout>
							<Image src="./resources/img/coming_soon.png" class="mdmTileUnderDevImage"
								densityAware="false" />
						</VBox>
					</content>
				</CustomTile>

				<!-- Manual Import -->
				<CustomTile class="mdmTile" press="onManualImport">
					<content>
						<VBox>
							<l:HorizontalLayout>
								<core:Icon class="mdmTileIcon"
									src="sap-icon://upload" />
								<VBox class="mdmTileHeader">
									<Text class="mdmTileHeaderTitle" text="Data Import" />
									<Text class="mdmTileHeaderSub" text="Import Data from CSV Sheets" />
								</VBox>
							</l:HorizontalLayout>
							<Image src="./resources/img/no_image.png" class="mdmTileImage"
								densityAware="false" />
						</VBox>
					</content>
				</CustomTile>
			</TileContainer>
		</content>

		<!-- Footer -->
		<footer>
			<Bar>
				<contentLeft>
					<mvc:XMLView viewName="uni.mannheim.mdm.view.Menu"></mvc:XMLView>
				</contentLeft>
				<contentRight>
					<Text class="mdmCopyright" text="Â© solveIT 2015" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>
<mvc:View height="100%" controllerName="uni.mannheim.mdm.controller.import.Overview"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">

	<Page title="SolveIT" class="sapUiContentPadding" showNavButton="true" navButtonPress="onBack">
		<!-- Header -->
		<headerContent>
			<mvc:XMLView viewName="uni.mannheim.mdm.view.Header"></mvc:XMLView>
		</headerContent>

		<!-- Content -->
		<content>
			<TileContainer id="overviewCont">
				<StandardTile icon="sap-icon://list"
					title="Work List" type="Monitor" />
				<StandardTile icon="sap-icon://it-system"
					title="Data Source" type="Monitor" />
				<StandardTile icon="sap-icon://upload"
					title="Manual Import" press="onManualImport" info="Import Data from CSV sheets" type="Create" />	
			</TileContainer>
		</content>

		<!-- Footer -->
		<footer>
			<Toolbar>
				<mvc:XMLView viewName="uni.mannheim.mdm.view.Menu"></mvc:XMLView>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
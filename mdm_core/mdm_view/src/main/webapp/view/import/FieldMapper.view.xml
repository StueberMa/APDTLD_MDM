<mvc:View height="100%" controllerName="uni.mannheim.mdm.controller.import.FieldMapper"
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:u="sap.ui.unified" 
	xmlns:l="sap.ui.layout" 
	xmlns:t="sap.ui.table" 
	xmlns:vbm="sap.ui.vbm">
	<HBox>	
		<HBox width="47%">
			<VBox width="100%" alignItems="Center" justifyContent="Center">
				<Title level="H1" text="File" />
			</VBox>
		</HBox>
		<HBox width="47%">
			<VBox width="100%" alignItems="Center" justifyContent="Center">
				<Title level="H1" text="Database" />
			</VBox>
		</HBox>
		<HBox width="6%">
			<VBox width="100%" alignItems="Center" justifyContent="Center">
				<Button icon="sap-icon://add" press="onAdd" />
			</VBox>
		</HBox>
	</HBox>
	<HBox>
		<HBox width="47%">
			<VBox width="33%" alignItems="Center" justifyContent="Center">
				<Title level="H3" text="Field Name" />
			</VBox>
			<VBox width="33%" alignItems="Center" justifyContent="Center">
				<Title level="H3" text="Field Type" />
			</VBox>
			<VBox width="33%" alignItems="Center" justifyContent="Center">
				<Title level="H3" text="Field Sample" />
			</VBox>
		</HBox>
		<HBox width="47%">
			<VBox width="33%" alignItems="Center" justifyContent="Center">
				<Title level="H3" text="Field Name" />
			</VBox>
			<VBox width="33%" alignItems="Center" justifyContent="Center">
				<Title level="H3" text="Field Type" />
			</VBox>
			<VBox width="33%" alignItems="Center" justifyContent="Center">
				<Title level="H3" text="Field Sample" />
			</VBox>
			<HBox width="6%">
			</HBox>
		</HBox>
	</HBox>
	<List items="{/mappings/}" id="mappingList">
		<CustomListItem>
			<HBox>
				<HBox width="47%">
					<VBox width="33%" alignItems="Center" justifyContent="Center">
						<Label text="{fName}" />
					</VBox>
					<VBox width="33%" alignItems="Center" justifyContent="Center">
						<Select selectedKey="str">
							<core:Item key="Number" text="Number" />
							<core:Item key="Text" text="Text" />
							<core:Item key="Date" text="Date" />
						</Select>
					</VBox>
					<VBox width="33%" alignItems="Center" justifyContent="Center">
						<Label text="{fSample}" />
					</VBox>
				</HBox>
				<HBox width="47%">
					<VBox width="33%" alignItems="Center" justifyContent="Center">
						<ComboBox selectedKey="{dbName}" items="{/attributes_database/}" selectionChange="onDBNameChange">
							<core:Item key="{name}" text="{name}" />
						</ComboBox>
					</VBox>
					<VBox width="33%" alignItems="Center" justifyContent="Center">
						<Label text="{dbType}" />
					</VBox>
					<VBox width="33%" alignItems="Center" justifyContent="Center">
						<Label text="{dbSample}" />
					</VBox>
				</HBox>
				<HBox width="6%">
					<VBox width="100%" alignItems="Center" justifyContent="Center">
						<Button icon="sap-icon://delete" press="onDelete" />
					</VBox>
				</HBox>
			</HBox>
		</CustomListItem>
	</List>
	<HBox>
		<Button text="Reset"
				press="onReset"
				ariaDescribedBy="defaultButtonDescription genericButtonDescription">
			<layoutData>
				<FlexItemData growFactor="1" />
			</layoutData>
		</Button>
		<Button type="Accept"
				text="Analyse Rows"
				press="onAnalyseRows"
				ariaDescribedBy="acceptButtonDescription genericButtonDescription">
			<layoutData>
				<FlexItemData growFactor="1" />
			</layoutData>
		</Button>
	</HBox>
</mvc:View>